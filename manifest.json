{
  "content_scripts": [
    {
      "matches": [
        "*://web.whatsapp.com/*"
      ], 
      "js": [
        "contentscript.js"
      ]
    }
  ], 
  "browser_action": {
    "default_icon": "icons/whatsapp_128.png", 
    "default_title": "WhatsApp Launcher"
  }, 
  "description": "Fast Launcher for WhatsApp Web", 
  "icons": {
    "128": "icons/whatsapp_128.png", 
    "64": "icons/whatsapp_64.png", 
    "48": "icons/whatsapp_48.png", 
    "16": "icons/whatsapp_16.png"
  }, 
  "background": {
    "scripts": [
      "background.js"
    ]
  }, 
  "name": "WhatsApp Launcher", 
  "options_ui": {
    "chrome_style": true, 
    "page": "options.html", 
    "open_in_tab": false
  }, 
  "version": "1.2.4", 
  "options_page": "options.html", 
  "manifest_version": 2, 
  "permissions": [
    "tabs", 
    "https://web.whatsapp.com/", 
    "storage"
  ], 
  "update_url": "https://extension-updates.opera.com/api/omaha/update/", 
  "developer": {
    "url": "http://twitter.com/9holoTpk", 
    "name": "Sontaya T. Wichakot"
  }
}